{
  "screen_name": "client_mode_wizard",
  "windowed_canvas": true,
  "cache_canvases": true,
  "button_map": {
    "a": "select",
    "b": "back",
    "up": "previous",
    "down": "next",
    "left": "noop",
    "right": "noop"
  },
  "background": {
    "layers": [
      { "image_path": "assets/optiondialog/option_dialog_bg_narrow.png", "x": 15, "y": 14 }
    ]
  },
  "pages": [
    {
      "page_index": 0,
      "menu_items": [
        {
          "id": "client_mode_wizard_title",
          "unselectable": true,
          "layers": [
            { "x": 100, "y": 25, "text_size": "large", "text_color_palette": "green", "text": "Network Access Setup" }
          ]
        },
        {
          "id": "ssid",
          "x": 140,
          "y": 70,
          "layers": [
            { "image_path": "assets/keyboard.png" },
            { "text": "Network Name", "x": 40, "text_color_palette": "dark_green" }
          ],
          "selected_layers": [
            { "image_path": "assets/keyboard.png" },
            { "text": "Network Name", "x": 40, "text_color_palette": "green" }
          ],
          "target": "edit_string_dialog",
          "variable": "$_SETUP_CLIENT_MODE_SSID"
        },
        {
          "id": "enc",
          "x": 140,
          "y": 105,
          "layers": [
            { "image_path": "assets/menu.png" },
            { "text": "Encryption Type", "x": 40, "text_color_palette": "dark_green" }
          ],
          "selected_layers": [
            { "image_path": "assets/menu.png" },
            { "text": "Encryption Type", "x": 40, "text_color_palette": "green" }
          ],
          "target": "option_dialog",
          "variable": "$_SETUP_CLIENT_MODE_ENCRYPTION_TYPE"
        },
        {
          "id": "pass",
          "x": 140,
          "y": 140,
          "layers": [
            { "image_path": "assets/keyboard.png" },
            { "text": "Passphrase", "x": 40, "text_color_palette": "dark_green" }
          ],
          "selected_layers": [
            { "image_path": "assets/keyboard.png" },
            { "text": "Passphrase", "x": 40, "text_color_palette": "green" }
          ],
          "target": "edit_string_dialog",
          "variable": "$_SETUP_CLIENT_MODE_PASSPHRASE"
        },
        {
          "id": "save",
          "x": 120,
          "y": 175,
          "layers": [
            { "image_path": "assets/wizard.png" },
            { "text": "Accept", "x": 40, "text_color_palette": "dark_green" }
          ],
          "selected_layers": [
            { "image_path": "assets/wizard.png" },
            { "text": "Accept", "x": 40, "text_color_palette": "green" }
          ],
          "target": "function_save_wifi_client_mode",
          "button_map": {
            "a": "select",
            "b": "back",
            "up": "previous",
            "down": "goto ssid",
            "left": "goto clear",
            "right": "goto clear"
          }
        },
        {
          "id": "clear",
          "x": 250,
          "y": 175,
          "layers": [
            { "image_path": "assets/x.png", "x": 7, "y": 4 },
            { "text": "Reset", "x": 40, "text_color_palette": "dark_green" }
          ],
          "selected_layers": [
            { "image_path": "assets/x.png", "x": 7, "y": 4 },
            { "text": "Reset", "x": 40, "text_color_palette": "red" }
          ],
          "target": "function_clear_client_mode",
          "button_map": {
            "a": "select",
            "b": "back",
            "up": "goto pass",
            "down": "next",
            "left": "goto save",
            "right": "goto save"
          }
        }
      ]
    }
  ]
}
